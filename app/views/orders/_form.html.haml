= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_name
    = f.text_field :customer_name
  .field
    = f.label :customer_email
    = f.text_field :customer_email
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :frame_color
    = f.collection_select :frame_color_id, FrameColor.all, :id, :name, prompt: true
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :estimated_completion_date
    = f.date_select :estimated_completion_date
  .field
    = f.label :paid_on
    = f.text_field :paid_on
  .actions
    = f.submit 'Save'
